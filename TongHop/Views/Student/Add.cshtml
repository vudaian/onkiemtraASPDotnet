@model TongHop.Models.Student
@{
    ViewData["Title"] = "Add";
}

@* Sử dụng html như bình thường *@
<div class="col-md-6">
    <form action="/Student/Save" method="post">
        <h3 class="text-center">Thêm mới sinh viên</h3>
        <div class="form-group">
            <label>Mã sinh viên</label>
            <input type="text" name="ID" value="" class="form-control" />
        </div>
        <div class="form-group">
            <label>Họ tên</label>
            <input type="text" name="Name" value="" class="form-control" />
        </div>
        <div class="form-group">
            <label>Tên lớp</label>
            <input type="text" name="ClassName" value="" class="form-control" />
        </div>
        <div class="form-group">
            <label>Địa chỉ</label>
            <input type="text" name="Address" value="" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" name="Add" value="Thêm mới" class="btn btn-success" />
        </div>
    </form>
</div>

