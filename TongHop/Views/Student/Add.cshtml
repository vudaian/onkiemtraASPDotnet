            <div class="form-group">
                @Html.Label("ID", "Mã sinh viên")
                @Html.TextBox("ID", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Name", "Họ Tên")
                @Html.TextBox("Name", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("ClassName", "Tên lớp")
                @Html.TextBox("ClassName", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Address", "Địa chỉ")
                @Html.TextBox("Address", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Thêm" />
            </div>
        @{ Html.EndForm();}

</div>
